{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "es5",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "types": [
      "reflect-metadata"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "./src/**/*"
  ]
}
